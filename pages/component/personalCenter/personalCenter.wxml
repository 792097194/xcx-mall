<!--pages/personalCenter/personalCenter.wxml-->
<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="cell-header m-t">
    <view class="cell">
      <navigator class="cell-nav" url="/pages/component/myaddress/myaddress" hover-class="navigator-hover">
        <text class="cell-title">管理地址</text>
        <text class="f-r">></text>
      </navigator>
    </view>
    <view class="cell">
      <navigator class="cell-nav" url="/pages/component/myorders/myorders" hover-class="navigator-hover">
        <text class="cell-title">我的订单</text>
        <text class="f-r">></text>
      </navigator>
    </view>
  </view>
</view>