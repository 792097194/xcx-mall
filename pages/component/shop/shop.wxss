/* pages/shop/shop.wxss */
.cell-goods {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods {
  flex: 1;
}

swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.good-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #ffffff;
    text-align: center;
    background-color: #ec6654;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.good-box{
    padding:0 40rpx;
    background-color: #ec6654;
}
.good-box .good-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin:0 10rpx 10rpx 0;
    text-align: center;
    background: #ffffff;
}
.good-box .good-list:nth-child(2n){
    margin-right: 0;
}
.good-box .good-list image{
    width: 250rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}
.good-box .good-list .good-text{
    font-size: 36rpx;
}